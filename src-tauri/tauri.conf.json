{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "object0",
  "version": "1.2.0",
  "identifier": "dev.object0.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "object0",
        "width": 1280,
        "height": 800
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https:; font-src 'self' data:; connect-src 'self' ipc: https: http: ws: wss:; media-src 'self' data: blob:; object-src 'none'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNGRjBEQ0ZEMDcyRUI0REMKUldUY3RDNEgvZHp3UHhIZU5JR1l2cDh1MUVubW03bFlXQUQxazdsQXdEQTcrbmdRNE54VFJzNVoK",
      "endpoints": [
        "https://github.com/sayedhfatimi/object0/releases/latest/download/latest.json"
      ]
    }
  }
}
